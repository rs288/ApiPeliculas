@model PeliculasWeb.Models.Categoria
@{
    ViewData["Title"] = "Crear una categoría";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container p-4">
    <div class="row">
        <div class="col-12">
            <h2 class="text-primary">
                Crear una categoría
            </h2>
        </div>
    </div>
    <br />
    <br />

    <div class="row">
        <div class="col-sm-12">
            <form method="POST" asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group row mb-3">
                    <label asp-for="Nombre" class="col-4 col-form-label"></label>
                    <div class="col-8">
                        <input asp-for="Nombre" class="form-control" placeholder="Ingresa el nombre de categoria" />
                        <span asp-validation-for="Nombre" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-6">
                        <button type="submit" class="btn btn-primary w-100">
                            <i class="fas fa-plus"></i> Crear Categoria
                        </button>
                    </div>

                    <div class="col-6">
                        <a asp-action="Index" class="btn btn-secondary w-100">
                            <i class="fas fa-arrow-left"></i> Volver
                        </a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(function () {
            $('#fechaCreacion').datepicker({
                changeMonth: false,
                changeYear: false,
                yearRange: "1500:2022",
                dateFormat: "yy-mm-dd"
            }).datepicker("setDate", new Date())
        })
    </script>
}
