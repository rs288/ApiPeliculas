@{
    ViewData["Title"] = "Lista de películas";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <div class="container py-4">
        <div class="row mb-4">
            <div class="col-6">
                <h2 class="text-primary">
                    <i class="fas fa-list-alt"></i> Lista de Películas
                </h2>
            </div>
            <div class="col-4 text-end">
                <a asp-action="Create" class="btn btn-success text-white">
                    <i class="fas fa-plus"></i> Crear Nueva Película
                </a>
            </div>
        </div>

    <div class="p-3">
        <table id="tblPeliculas" class="table table-striped table-bordered" style="width:100%">
            <thead class="table-dark">
                <tr>
                    <th scope="col">Id</th>
                    <th scope="col">Nombre</th>
                    <th scope="col">Descripción</th>
                    <th scope="col">Clasificación</th>
                    <th scope="col">Duración</th>
                    <th scope="col">Fecha Creación</th>
                    <th scope="col">Acciones</th>
                </tr>
            </thead>
            <tbody>
                <!-- Aquí irán las filas generadas por DataTables -->
            </tbody>
        </table>
    </div>
</div>

@section Scripts {
    <script src="~/js/pelicula.js"></script>
}

