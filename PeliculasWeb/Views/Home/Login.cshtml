@model PeliculasWeb.Models.UsuarioAuth
@{
    ViewData["Title"] = "Acceso Usuario";
}

<h1 class="text-center">Acceso de Usuarios</h1>

<div class="row mt-4">
    <div class="col-12">
        <!--Tempdata-->
        @if (TempData["alert"] != null)
        {
            <div class="alert alert-warning alert-dismissible fade show" role="alert">
                <h3><strong>@TempData["alert"]</strong></h3>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }
    </div>
</div>

<div class="row">
    <div class="col-6 offset-3">
        <form asp-action="Login">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <div class="form-group row mb-3">
                <label for="Usuario" class="col-4 col-form-label">Usuario:</label>
                <div class="col-8">
                    <input asp-for="NombreUsuario" class="form-control" placeholder="Ingresa el nombre de usuario" />
                    <span asp-validation-for="NombreUsuario" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row mb-3">
                <label for="Password" class="col-4 col-form-label">Password:</label>
                <div class="col-8">
                    <input type="password" asp-for="Password" class="form-control" placeholder="Ingresa el password" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
            </div>

            <button type="submit" class="btn btn-primary w-100">
                <i class="fas fa-sign-in-alt"></i> INGRESAR
            </button>
        </form>
    </div>
</div>